extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title
				div.signup-wall
					p #{currentTime}
					form(class='form-signin', action='/change?hwid=#{hw._id}', method='POST')
						if currentTime <= hw.deadline
							textarea(rows="20", cols="60", name="request", class='form-control', placeholder='[past request]: #{hw.request}',required)
						else
							textarea(rows="20", cols="60", name="request", class='form-control', disabled="disabled",
							 placeholder='the time is up and it is not allowed to change request!',required)
						input(type='text', name='deadline', class='form-control nomargin', placeholder='[past deadline]: #{hw.deadline}',required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') Change This Homework
						span.clearfix
				a(href='/home', class='text-center new-account') Back