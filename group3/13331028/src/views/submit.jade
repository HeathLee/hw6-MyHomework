extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title
				div.signup-wall
					form(class='form-signin', action='/submit?hwid=#{hw._id}', method='POST')
						textarea(rows="20", cols="60", name="content", class='form-control', placeholder='content of your hw',required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') Submit Your Homework
						span.clearfix
				a(href='/home', class='text-center new-account') Back