extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title
				div.signup-wall
					form(class='form-signin', action='/mark?hwid=#{stuhw.hwid}&sid=#{stuhw.sid}', method='POST')
						input(type='text', name='grade', class='form-control nomargin', placeholder='[past grade]: #{stuhw.grade}',required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') Mark This Homework
						span.clearfix
				a(href='/home', class='text-center new-account') Back