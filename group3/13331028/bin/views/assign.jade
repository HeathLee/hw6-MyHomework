extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Teacher can assign an homework here.
					div.signup-wall
						form(class='form-signin', action='/assign', method='POST')
							textarea(rows="20", cols="60", name="request", class='form-control', placeholder='request',required)
							textarea(rows="2", name='deadline', class='form-control nomargin',
							 placeholder='deadline, format is: \'year-month-day hour-min-sec\'(\'xxxx-xx-xx xx-xx-xx\')',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Assign This Homework
							span.clearfix
					a(href='/home', class='text-center new-account') Back